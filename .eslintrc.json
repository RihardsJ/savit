{
  "extends": [
    "plugin:astro/recommended",
    "plugin:@typescript-eslint/recommended",
    "eslint:recommended"
  ],
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      },
      "rules": {}
    },
    {
      "files": ["*.ts", "*.js"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "parser": "@typescript-eslint/parser",
        "plugins": ["@typescript-eslint"]
      },
      "env": {
        "browser": true,
        "node": true,
        "es6": true
      }
    }
  ]
}
